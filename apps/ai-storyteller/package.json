{
  "name": "ai-storyteller",
  "version": "1.0.0",
  "private": true,
  "description": "LiquidMetal AI app",
  "scripts": {
    "build": "shx rm -rf dist && tsc --build",
    "start": "raindrop build deploy --start",
    "stop": "raindrop build stop",
    "restart": "raindrop build deploy --start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "prestart": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1",
    "@liquidmetal-ai/raindrop-framework": "0.13.0",
    "hono": "^4",
    "@hono/zod-validator": "^0.2.2",
    "kysely": "^0.27.2",
    "kysely-d1": "^0.3.0",
    "zod": "^3"
  },
  "devDependencies": {
    "shx": "^0.4.0",
    "ts-node": "^10",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.7.0",
    "vitest": "^3.1.3"
  }
}
